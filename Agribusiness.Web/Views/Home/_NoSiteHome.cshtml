@model HomeViewModel

<style type="text/css">
    .row { text-align: center;}
</style>

<div class="row">
    @if (Model.Sites.Count() == 1)
    {
        var site = Model.Sites.First();
        
        <a href="@Url.Action("Index", "Home", new { @site = site.Id })">
        <span class="span12">
            @if (site.SplashImage != null)
            {
                <img src='@Url.Action("GetSplash", "Site", new { id = site.Id, @site = "none" })' alt="Splash Image"/>
            }
            <h3>@site.Name</h3>
            @Html.Raw(site.Description)
        </span>
        </a>
    }
    else
    {
        var cssclass = Model.Sites.Count() == 2 ? "span6" : "span4";
        foreach (var site in Model.Sites)
        {
            <a href="@Url.Action("Index", "Home", new { @site = site.Id})">
            <span class="@cssclass" style="border: 1px solid black;">
                @if (site.SplashImage != null)
                {
                    <img src='@Url.Action("GetSplash", "Site", new { id = site.Id, @site = "none" })' alt="Splash Image"/>
                }                
                <h3>@site.Name</h3>
                @Html.Raw(site.Description)
            </span>
            </a>
        }
    }
</div>

