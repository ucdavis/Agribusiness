@model IEnumerable<Agribusiness.Core.Domain.CaseStudy>

@{
	ViewBag.Title = "Case Studies";
    ViewBag.SubPageTitle = "Case Studies";
}

@section SubPageNavigation
{
	<ul class='navigation'>
		<li>@Html.ActionLink("Back to My Seminar", "MySeminar", "Seminar", new { id = ViewBag.seminarPersonId }, new { })</li>
	</ul>
}

<div class="ui-state-highlight" style="padding: 1em;">
Case studies will be available to download in February 2012.
</div>

<table class="default_table nolasticon">
	<thead>
		<tr>
			<th></th>
			<th>
				Name
			</th>
			<th>
				Description
			</th>
			<th>
				Authors
			</th>
			<th>
				Executives
			</th>
		</tr>
	</thead>
	<tbody>
@{ var odd = false; }
@foreach (var item in Model) {
		<tr class="@(odd ? "odd": "even")">
			<td>
                @if (item.File != null)
                {
                <a href='@Url.Action("Download", new { id = item.Id })'>
					<img src='@Url.Image("details.png")' />
				</a>    
                }
			</td>
			<td>
				@item.Name
			</td>
			<td>
				@item.Description
			</td>
			<td>
				@item.Authors
			</td>
			<td>
				@item.Executives
			</td>

		</tr>
		odd = !odd;
}
	</tbody>
</table>

