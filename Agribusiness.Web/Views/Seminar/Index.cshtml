@using Agribusiness.Core.Domain
@using Agribusiness.Web.Models

@model IQueryable<Seminar>

@{
    ViewBag.Title = "Seminar Home";
    ViewBag.SubPageTitle = "Seminars";
}

@section SubPageNavigation {
    <ul class="navigation">
        <li>
            @Html.ActionLink("Create New", "Create", "Seminar")
        </li>
    </ul>
}

@if (Model.Count() <= 0)
{ 
    @Html.Partial("_Message", new MessageModel() { IsError = false, Message = "There are no seminars available" })
}
else
{ 
    <table class="nolasticon default_table">
        <thead>
            <tr>
                <th></th>
                <th>Year</th>
                <th>Location</th>
                <th>Registration Deadline</th>
                <th>Registration Id</th>
            </tr>    
        </thead>
        <tfoot></tfoot>
        <tbody>
            @foreach (var a in Model)
            { 
                <tr>
                    <td><a href='@Url.Action("Details", new { id = a.Id })'>
                            <img src='@Url.Content("~/Images/details.png")' alt="View the details of this seminar" />
                        </a>
                        <a href='@Url.Action("Edit", new {id = a.Id})'>
                            <img src='@Url.Content("~/Images/edit.png")' alt="Edit this seminar" />
                        </a>
                    </td>
                    <td>@a.Year</td>
                    <td>@a.Location</td>
                    <td>@a.RegistrationDeadlineString </td>
                    <td>@a.RegistrationId</td>
                </tr>
            }
        </tbody>
    </table>
}