@*
    Used once the final program schedule was available
*@

@{
    var dates = Model.Where(a=>a.Begin.HasValue).Select(a => a.Begin.Value.Date).Distinct();
}

@foreach (var date in dates)
{
    var sessions = Model.Where(a => a.Begin.Value.Date == date);

    <h3>@String.Format("{0:dddd, MMMM d}", date)</h3>
    
    foreach (var session in sessions.OrderBy(a=>a.Begin))
    {
        <div class="session">
            
            <div class="session-time">
                @if (session.Begin.HasValue && session.End.HasValue)
                {
                    @string.Format("{0}-{1}", session.Begin.Value.ToString("t"), session.End.Value.ToString("t"))
                }
                else
                {
                    @(session.Begin.HasValue ? session.Begin.Value.ToString("t") : string.Empty)     
                }
            </div>
            <div class="session-name">@session.Name</div>

        </div>
    
    }
}


