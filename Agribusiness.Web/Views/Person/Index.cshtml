@model IQueryable<Person>

@{
    ViewBag.Title = "People Index";
    ViewBag.SubPageTitle = "People Index";
}

@section SubPageNavigation
{
    <ul class="navigation">
        <li>@Html.ActionLink("Create New", "Create")</li>
    </ul>
}

@foreach (var a in Model)
{ 
    <fieldset>
        <legend>@a.FullName</legend>

        <img src='@Url.Action("GetProfilePicture", "Person", new {id=a.Id})' alt='string.Format("{0}''s Profile Picture", @a.FullName)' />

    </fieldset>
}