@model Agribusiness.Core.Domain.Invitation

@{
	ViewBag.Title = "Create";
}

<h2>Create</h2>


@section SubPageNavigation
{
	<ul class="nav nav-pills">
		<li>@Html.ActionLink("Back to List", "Index", new {id=Model.Seminar.Id})</li>
	</ul>
}

@using (Html.BeginForm("Create", "Invitation", FormMethod.Post, new {@class="form-horizontal"})) {
	
    @Html.AntiForgeryToken()
	@Html.ValidationSummary(true)
    
    <div class="control-group">
        <fieldset>
            
            <legend>Invitation</legend>
            
            <div class="control-group">
                <label class="control-label" for="person">Person</label>
                <div class="controls form-text">
                    @Model.Person.FullName
                </div>
            </div>

            <div class="control-group">
                <label for="Title" class="control-label">Title</label>
                <div class="controls">
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="Firm Name">Firm Name</label>
                <div class="controls">
                    @Html.EditorFor(model => model.FirmName)
                    @Html.ValidationMessageFor(model => model.FirmName)
                </div>
            </div>
        </fieldset>
    </div>
    
    <div class="form-actions">
        <input class="btn btn-primary" type="submit" value="Create" />
        @Html.ActionLink("Cancel", "Index", new { id = Model.Seminar.Id }, new {@class="btn"})
    </div>
}


