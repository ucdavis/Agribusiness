@model Agribusiness.Core.Domain.Invitation

@{
	ViewBag.Title = "Edit Invitation";
    ViewBag.SubPageTitle = "Edit Invitation";
}

@section SubPageNavigation
{
	<ul class="nav nav-pills">
		<li>@Html.ActionLink("Back to List", "Index")</li>
	</ul>
}

@using (Html.BeginForm("Edit", "Invitation", FormMethod.Post, new {@class="form-horizontal"})) {
	
    @Html.AntiForgeryToken()
	@Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    
    <div class="control-group">
        <p class="help-block">All required fields are in <strong>bold</strong> and have a red <span class="required">*</span> next to the field label.</p>
        <fieldset>
	        <div class="control-group">
                <label for="Person" class="control-label">Person</label>
                <div class="controls form-text">
                    @Model.Person.FullName
                </div>
            </div>
            <div class="control-group">
                <label for="Title" class="control-label">Title</label>
                <div class="controls">
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>
            <div class="control-group">
                <label for="FirmName" class="control-label">Firm Name</label>
                <div class="controls">
                    @Html.EditorFor(model => model.FirmName)
                    @Html.ValidationMessageFor(model => model.FirmName)
                </div>
            </div>
        </fieldset>    
    </div>
    <div class="form-actions">
        <input type="submit" class="btn btn-primary" value="Edit"/>
        @Html.ActionLink("Cancel", "Index", "Invitation", new { id = Model.Seminar.Id }, new { @class = "btn" })
    </div>
}



