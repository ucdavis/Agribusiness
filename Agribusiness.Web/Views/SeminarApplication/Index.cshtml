@model IEnumerable<Agribusiness.Core.Domain.Application>

@{
    ViewBag.Title = "Seminar Applications";
    ViewBag.SubPageTitle = "Seminar Applications";
}


<table>
	<thead>
		<tr>
			<th></th>
			<th>
				FirstName
			</th>
			<th>
				MI
			</th>
			<th>
				LastName
			</th>
			<th>
				Expectations
			</th>
            <th>Date Submitted</th>
            <th>Pending</th>
            <th>Approved</th>
		</tr>
	</thead>
	<tbody>
@{ var odd = false; }
@foreach (var item in Model) {
		<tr class="@(odd ? "odd": "even")">
			<td>
                <a href='@Url.Action("Decide", new { id=item.Id })'>
                <img src='@Url.Content("~/Images/Edit.png")' alt="Decide on this application." />
                </a>

				@*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
				@Html.ActionLink("Details", "Details", new { id=item.Id }) |
				@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
			</td>
			<td>
				@item.FirstName
			</td>
			<td>
				@item.MI
			</td>
			<td>
				@item.LastName
			</td>
			<td>
				@item.Expectations
			</td>
            <td>
                @item.DateSubmitted.ToString("g")
            </td>
            <td>@item.IsPending</td>
            <td>@item.IsApproved</td>
		</tr>
		odd = !odd;
}
	</tbody>
</table>

