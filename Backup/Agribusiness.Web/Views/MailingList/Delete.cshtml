@model Agribusiness.Core.Domain.MailingList

@{
    ViewBag.Title = "Delete Mailing List";
    ViewBag.SubPageTitle = "Delete Mailing List";
}

@section ScriptContent{
    <link rel="stylesheet" type="text/css" href="@Url.Css("jquery.AutoCompleteSelect.css")"/>
}

<h3>Are you sure you want to delete this?</h3>

@using (Html.BeginForm()) {
	@Html.AntiForgeryToken()

<fieldset class="display-form">
	<legend>MailingList</legend>
	<ul>

		<li>
			<div class="display-label">Name</div>
			<div class="display-details">@Model.Name</div>
		</li>

        <li>
            <div class="display-label">People</div>
            <div class="display-details">
            
                <div class="ac-container ac-gradientbackground">
                
                    <div class="ac-selectedContainer">
                    
                        @foreach (var person in Model.People.OrderBy(a => a.LastName))
                        {
                            <span class="ac-selected ac-gradientbackground">
                                <span style="display:inline-block;">@person.FullName</span>
                            </span>
                        }

                    </div>

                </div>

            </div>
        </li>

		<li>
			<div class="display-label">DateCreated</div>
			<div class="display-details">@String.Format("{0:g}", Model.DateCreated)</div>
		</li>

		<li>
			<div class="display-label">DateUpdated</div>
			<div class="display-details">@String.Format("{0:g}", Model.DateUpdated)</div>
		</li>
		
		<li>
			@* For the clear and submit buttons an empty label is required. Example: <label>&nbsp;</label> *@
			<div class="display-label">&nbsp;</div>
			<div class="display-details">
			<input class="button" type="submit" value="Delete" /> | @Html.ActionLink("Cancel", "Index")
			</div>
		</li>
	</ul>
</fieldset>
}




