@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Index</title>
    <script src="//ajax.microsoft.com/ajax/jQuery/jquery-1.5.1.min.js"></script>
    <script src="//ajax.microsoft.com/ajax/jquery.ui/1.8.10/jquery-ui.min.js"></script>
    <link href="@Url.Content("~/Css/jquery.Jcrop.css")" rel="stylesheet" type="text/css" />   
    <script src="@Url.Content("~/Scripts/jquery.Jcrop.min.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(function () {
            $("#placeholder").Jcrop({onChange: showCoords, onSelect: showCoords, aspectRatio: .8});
        });

        function showCoords(c) {
            $("#x").val(c.x);
            $("#y").val(c.y);
            $("#x2").val(c.x2);
            $("#y2").val(c.y2);
            $("#w").val(c.w);
            $("#h").val(c.h);
        }
    </script>
</head>
<body>
    <div>
        @Html.Raw((string)TempData["Result"])
    </div>


    <img src='@Url.Content("~/Images/profileplaceholder.jpg")' id="placeholder" />

    @using (Html.BeginForm())
    { 
        @Html.AntiForgeryToken()
        <input type="text" id="x" name="x" />
        <input type="text" id="y" name="y" />
        <input type="text" id="x2" name="x2" />
        <input type="text" id="y2" name="y2" />
        <input type="text" id="w" name="w" />
        <input type="text" id="h" name="h" />
        
        <input type="submit" value="save" />
    }

</form>

</body>
</html>
