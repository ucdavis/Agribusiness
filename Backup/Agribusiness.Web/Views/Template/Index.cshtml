@using Agribusiness.Web.Helpers

@model IQueryable<Agribusiness.Core.Domain.Template>

@{
	ViewBag.Title = "Templates";
    ViewBag.SubPageTitle = "Templates";
}

@section SubPageNavigation
{
	<ul class='navigation'>
		<li>@Html.ActionLink("Create New", "Create")</li>
	</ul>
}

@section ScriptContent
{
    <style type="text/css">
        .bodyText p
        {
            margin: .5em 0;
        }
    </style>
}

<table class='default_table'>
	<thead>
		<tr>
			<th></th>

			<th>
				BodyText
			</th>

			<th>
				Type
			</th>


			<th></th>

		</tr>
	</thead>
	<tbody>
@{ var odd = false; }
@foreach (var item in Model) {
		<tr class="@(odd ? "odd": "even")">

			<td>
				<a href='@Url.Action("Details", new {id=item.Id})'>
					<img src='@Url.Image("details.png")' />
				</a>
				<a href='@Url.Action("Edit", new {id=item.Id})'>
					<img src='@Url.Image("edit.png")' />
				</a>
			</td>

			<td>
                <div class="bodyText">
				@Html.HtmlEncode(item.BodyText)
                </div>
			</td>

			<td>
				@item.NotificationType.Name
			</td>

		
					<td>
						<a href='@Url.Action("Delete", new { id = item.Id })'>
							<img src='@Url.Image("delete.png")' />
						</a>
					</td>
		

		</tr>
		odd = !odd;
}
	</tbody>
</table>