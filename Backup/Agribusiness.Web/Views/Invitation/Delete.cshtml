@model Agribusiness.Core.Domain.Invitation

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>

@using (Html.BeginForm()) {
	@Html.AntiForgeryToken()

<fieldset class="display-form">
	<legend>Invitation</legend>
	<ul>
        <li>
            <div class="display-label">Person:</div>
            <div class="display-details">@Model.Person.FullName</div>
        </li>
		<li>
			<div class="display-label">Title</div>
			<div class="display-details">@Model.Title</div>
		</li>
		<li>
			<div class="display-label">FirmName</div>
			<div class="display-details">@Model.FirmName</div>
		</li>
		
		<li>
			@* For the clear and submit buttons an empty label is required. Example: <label>&nbsp;</label> *@
			<div class="display-label">&nbsp;</div>
			<div class="display-details">
			<input class="button" type="submit" value="Delete" /> | @Html.ActionLink("Cancel", "Index", new {id=Model.Seminar.Id})
			</div>
		</li>
	</ul>
</fieldset>
}


